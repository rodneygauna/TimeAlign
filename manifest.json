{
  "manifest_version": 3,
  "name": "TimeAlign",
  "version": "1.0.2",
  "description": "Convert a date and time into US timezones.",
  "permissions": ["clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/TimeAlign_96x96.png"
  },
  "icons": {
    "96": "icons/TimeAlign_96x96.png",
    "124": "icons/TimeAlign_124x124.png"
  }
}
